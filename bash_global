# General term settings
export PATH=/usr/local/bin:$HOME/usr/local/bin:$PATH
export PS1="\u@\h:\W \$ "
export CLICOLOR=1
export TERM=xterm-256color

alias lls="ls -lagh"
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias gs='git status'
alias vvim='vim -c Tagbar -c NERDTree'
alias fdate="date '+%Y_%m_%d'"
alias fsdate="date '+%Y_%m_%d_%s'"
alias ll='ls -l'
alias cp='cp -i'
alias mv='mv -i'

# disable flow control
[ ! -x /bin/stty ] || stty -ixon

# append to the history file, don't overwrite it
shopt -s histappend
HISTSIZE=
HISTFILESIZE=
HISTCONTROL=ignoreboth

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

if [ -x /usr/bin/dircolors ]; then
  alias ls='ls --color'
  test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
  LS_COLORS=$LS_COLORS:'di=0;34:ln=35:ex=32:pi=36:so=36:or=41' ; export LS_COLORS
fi

function title ()
{
    TITLE=$*;
    export PROMPT_COMMAND='echo -ne "\033]0;$TITLE\007"'
}

function iterm2_print_user_vars() {
  iterm2_set_user_var gitBranch $((git branch 2> /dev/null) | grep \* | cut -c3-)
}
